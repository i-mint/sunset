# Based on Bridge by ScionicSpectre
# vim:set ts=2 sw=2 sts=2 ai et:
#
# This is the GTK+ 2 version of Adwaita. It's whole purpose is to look as the
# GTK+ 3 version as much as possible until GTK+ 2 dies completely.
#
# Note: comments for explaining styles are on the bottom of each file beside the
# widget matches.

# Declare the colours used throughout the theme.
# There shouldn't be any fiddling with them in the theme files themselves in
# order to not mess up the dark theme.

# Text/base
gtk-color-scheme = "text_color:#272121\nbase_color:#e3dddd"
# Foreground/background
gtk-color-scheme = "fg_color:#272121\nbg_color:#e8e8e7"
#Â Selected foreground/background
gtk-color-scheme = "selected_fg_color:#ffffff\nselected_bg_color:#c74646"
# Insensitive foreground/background
gtk-color-scheme = "insensitive_fg_color:#787171\ninsensitive_bg_color:#d3cccc"
# Menus
gtk-color-scheme = "menu_color:#e3dddd"
# Links
gtk-color-scheme = "link_color:#272121\nvisited_link_color:#215d9c"
# Treeview headers
gtk-color-scheme = "column_header_color:#2e0e0e\nhover_column_header_color:#2e0e0e"
# Window decoration
gtk-color-scheme = "window_color:#e3dddd"
# Tooltips
gtk-color-scheme = "tooltip_fg_color:#000\ntooltip_bg_color:#c2ac6c"

# Set GTK settings
gtk-auto-mnemonics              = 1
gtk-primary-button-warps-slider = 1

# And hand over the control to the theme files
include "main.rc"
include "apps.rc"
include "hacks.rc"
